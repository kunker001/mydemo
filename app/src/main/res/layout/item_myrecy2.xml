<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="#333"
        android:textSize="17sp"
        android:text="标题"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="内容"
            android:textColor="#666"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/label_1"
            android:maxEms="15"
            android:singleLine="true"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="#666"
            android:textSize="15sp"
            tools:text="张三"/>

        <TextView
            android:id="@+id/label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_1"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="地址"
            android:textColor="#666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/label_2"
            android:gravity="center_vertical"
            android:textColor="#666"
            android:textSize="15sp"
            tools:text="备注内容" />

        <TextView
            android:id="@+id/label_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_2"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="状态"
            android:textColor="#666"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_address"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/label_3"
            android:gravity="center_vertical"
            android:textColor="#666"
            android:textSize="15sp"
            tools:text="备注内容"/>

        <TextView
            android:id="@+id/item_label_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_3"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="时间"
            android:textColor="#666"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_state"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/item_label_4"
            android:gravity="center_vertical"
            android:textColor="#666"
            android:textSize="15sp"
            tools:text="备注内容"/>

    </RelativeLayout>
</LinearLayout>